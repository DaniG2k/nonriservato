<% if @highlights.empty? %>
  <div class="spacer grid_12">&nbsp; </div>
<% else %>
  <div id="slider" class="grid_12">
     <ul class="bxslider">
     <% @highlights.each do |h| %>
        <%= render :partial => "events/featured_event", :locals => { :event => h.get_parent, :h => h, :hos => @highlights} if (h.highlightable_type == "Event" && !h.get_parent.nil?) %>
        <%= render :partial => "posts/featured_post", :locals => { :post => h.get_parent, :h => h, :hos => @highlights} if (h.highlightable_type == "Post" && !h.get_parent.nil?) %>
        <%= render :partial => "projects/featured_project", :locals => { :project => h.get_parent, :h => h, :hos => @highlights} if (h.highlightable_type == "Project" && !h.get_parent.nil?) %>
        <%= (h.highlightable_type == "Project" && !h.get_parent.nil?) %>
        <%= (h.highlightable_type == "Project") %>
        <%= h.get_parent.nil?  %>
        <%= h.highlightable_type %>
     <% end %>
     </ul>
  </div>
<% end %>

<div class="grid_12 nr_definition">
  <%= t('.intro_text_html') %>
</div>


<div class="grid_12 nr_definition">
  <%= link_to (image_tag "banner-borderlight.jpg", :class => "banner"), "https://it.surveymonkey.com/r/borderlight" %>
</div>


<div class="grid_12 body">
  <div class="sort_bar">
    <span><%= t('.calendar') %></span>
  </div>
  <% if @events.present? %>
    <%= render "events/event" %>
  <% end %>
</div>

<div class="grid_12 body">
  <div class="sort_bar">
    <span><%= t('.updates') %></span>
  </div>
  <% if @posts.present? %>
    <%= render "posts/post" %>
  <% end %>
</div>
