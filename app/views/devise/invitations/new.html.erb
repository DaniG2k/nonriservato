<div class="grid_7 admin">
  <h1 class="o_1">
    <%= t('.title') %>
  </h1>

  <%= simple_form_for (resource), as: resource_name, url: invitation_path(resource_name), html: {autocomplete: "off", method: :post} do |f| %>
    <% resource.class.invite_key_fields.each do |field| -%>
      <%= f.input field, hint: "Inserisci l'email dell'organizzazione a cui mandare l'invito" %>
    <% end -%>
    <%= f.button :submit, value: t('.submit_button') %>
  <% end %>
</div>
