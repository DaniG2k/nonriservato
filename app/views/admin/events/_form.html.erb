  <%= semantic_form_for ([:admin, @event]) do |f| %>
    <%= f.inputs do %>
      <%= f.input :name,         :label =>"Nome",           :hint => "Clicca sul nome per cambiare", :placeholder => "nome dell'evento" %>

      <%= f.input :event_partner_ids,  :label =>"Partner", :hint => "Scrivi nella barra il nome e scegli il partner", :placeholder => "es: Ex-Voto", :as => :string, :multiple => true, :wrapper_html => {:class => 'right_hint'}  %>

      <%= f.input :event_type,   :label =>"Tipologia",      :hint => "Seleziona il tipo di evento", :as => :radio, :wrapper_html => {:class => ''}, :collection => @type_collection   %>
      <%= f.input :event_category,   :label =>"Tipologia",      :hint => "Seleziona la categoria", :as => :select, :wrapper_html => {:class => ''}, :collection => @category_collection   %>

      <%= f.input :project,      :label =>"Progetto di riferimento", :hint => "Seleziona il progetto a cui appartiene l'evento", :placeholder => "es: CriticalCity Upload", :prompt => "-- nessun progetto", :as => :select, :wrapper_html => {:class => 'right_hint'}, :collection => @projects  %>
                  
      <%= f.input :date_begun,   :label =>"Data inizio",    :as => :ui_date_picker, :wrapper_html => {:class => 'quarter float'}, :placeholder => "15/3/2013"%>
      <%= f.input :date_ended,   :label =>"Data fine",      :as => :ui_date_picker, :wrapper_html => {:class => 'quarter float'}, :placeholder => "" %>
      <%= f.input :time,         :label =>"Orari",          :placeholder => "es: 15:00 - 22:00", :wrapper_html => {:class => 'quarter float'}    %>
      <%= f.input :zone,         :label =>"Zona",           :as => :select, :collection => @zone_collection, :include_blank => false, :wrapper_html => {:class => 'quarter float'} %>
      <%= f.input :address,      :label =>"Indirizzo",      :placeholder => "es: Piazza Duca d'Aosta 15, Milano", :wrapper_html => {:class => 'clearform'}    %>
      <%# gmaps4rails(@json_event) %>
      <%= gmaps({
          "map_options" => {"zoom" => 17, "auto_zoom" => false},
          "markers" => { "data" => @json_event }
          }) if @json_event %>
      
      <%= f.input :description,  :label =>"Descrizione",    :hint => "Gli obiettivi, la storia, ecc...", :input_html => { :class => 'autogrow', :rows => 8  }  %>
      <%= f.input :definition,   :label =>"Riassunto",      :hint => "Il tuo evento il 220 caratteri", :input_html => { :class => 'autogrow', :rows => 2, :counter => 220 },  :wrapper_html => {:class => 'countit'}  %>
      
      <%= f.input :url,          :label =>"Sito internet",  :placeholder => "es: http://www.alterminedellanotte.it", :wrapper_html => {:class => 'half float first'} %>
      <%= f.input :email,        :label =>"Contatto email", :placeholder => "es: info@alterminedellanotte.it", :wrapper_html => {:class => 'half float'} %>
      <%= f.input :tel_1,        :label =>"Telefono 1",     :placeholder => "es: 02 10236545", :wrapper_html => {:class => 'clearform half float first'} %>
      <%= f.input :tel_2,        :label =>"Telefono 2",     :placeholder => "es: 349 54248534", :wrapper_html => {:class => 'half float'} %>
      <%= f.input :facebook_event_url,        :label =>"Evento Facebook",     :placeholder => "es: https://www.facebook.com/events/128101970703124/", :wrapper_html => {:class => "divider_below clearform right_hint"}, :hint => "Inserisci l'intera stringa dell'indirizzo" %>
      <%= f.input :image,        :label =>"Carica immagine" %>
      <% unless @event.image.nil? %>
         <%= image_tag @event.image(:medium), :class => "event_image" %><br>
      <% end %>


    <% end %>
    <%= f.action :submit, :button_html => { :value => 'Salva' } %>
  <% end %>
  <%= button_to "Cancella", admin_event_path(@event), :class => "delete", method: :delete, :confirm => "Sei sicuro di voler cancellare questo evento?", :method => :delete unless @event.new_record?  %>
          
          
