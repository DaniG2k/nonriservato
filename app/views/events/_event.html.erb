<% @events.each_slice(4) do |row| %>
   <%# style_array = array_of_styles.sample %>
   <% row.each_with_index do |event, idx| %>
      <% style = "small" %>
      <% color = event.event_type == "made" ? "color_1" : "color_2" %>
      <%= link_to (admin_namespace? ? edit_admin_event_path(event) : event_path(event)), class: "event_element grid_3 alpha #{"last" if idx == 3}" do %>
         <%= image_tag event.image("big"), title: "#{event.name}" %>
         <div class="date"><%= l(event.date_begun, format: :long) %></div>
         <div class="title <%= color %>"><%= event.name %></div>
         <div class="zone">municipio <%= event.zone %></div>
         <div class="definition"><%= event.definition %></div>
         <div class="see_more"><span>leggi di pi√π...</span></div>
      <% end %>
   <% end %>
<% end %>
