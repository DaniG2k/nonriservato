      <% style = "small" %>
      <% color = e.event_type == "made" ? "color_1" : "color_2" %>
      <%= link_to (admin_namespace? ? edit_admin_event_path(e) : event_path(e)), :class => "event_element grid_3 alpha #{"last" if i == 3}" do %>
         <%# image_tag e.image("#{style == "" ? "medium" : "small"}"), :title => "#{e.name}" %>
